extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Danh Sach San Pham ")

    .row 
      each item in products
        .col-4.mb-3 
          .product-item 
            .inner-imge 
              img(
                src = "https://cdn.tgdd.vn/Products/Images/42/329135/iphone-16-xanh-mong-ket-thumbnew-600x600.png"
                )
            .inner-content 
              h3.inner-title 
                a(href=`/products/${item.slug}`) #{item.title}
              .inner-price-new #{item.newPrice}$
              .inner-price-old #{item.price}$
              .inner-discount #{(item.discountPercentage)}%
