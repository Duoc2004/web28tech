extends ../../layouts/default.pug

block main 

    h1 Trang Chi Tiết Sản Phẩm
    .product-item
        if(product.title)
            h1(class="mb-4 label") Tiêu Đề Sản Phẩm:<b class="value">#{product.title}</b>
        if(product.description)
            h1(class="mb-4 label") Mô Tả Sản Phẩm: <b class="value">#{product.description}</b>
        if(product.price)
            h1(class="mb-4 label") Giá Sản Phẩm:<b class="value">#{product.price}</b>
        if(product.discountPercentage)
            h1(class="mb-4 label") Giảm Giá Sản Phẩm: <b class="value">#{product.discountPercentage}</b>
        if(product.thumbnail)
            h1(class="mb-4 label") Ảnh Sản Phẩm :
            img(src="data:image/webp;base64,")
        if(product.stock)
            h1(class="mb-4 label") Số Lượng Sản Phẩm:  <b class="value">#{product.stock}</b>
        if(product.position)
            h1(class="mb-4 label") Vị Trị Sản Phẩm: <b class="value">#{product.position}</b>
        if(product.status)
            if(product.status=="active")
                h1(class="mb-4 label") Trạng Thái Sản Phẩm: <b class="value color-red">Hoạt Động</b>
            else
                h1(class="mb-4 label") Trạng Thái Sản Phẩm: <b class="value color-red">Dừng Hoạt Động</b>
        a(
            href=`${prefixAdmin}/product/edit/${product.id}`
            class="btn btn-warning btn-sm"
        ) Chỉnh Sửa

    script(src="/admin/js/product.js")  


    